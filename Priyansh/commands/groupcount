// commands/groupcount.js
module.exports = {
  config: {
    name: "groupcount",
    version: "1.0.0",
    permission: 2,
    credits: "Rakib Boss",
    description: "Shows how many groups the bot is in",
    category: "system",
    usages: "groupcount",
    cooldowns: 5,
  },

  run: async function ({ api, event }) {
    const threadList = await api.getThreadList(100, null, ["INBOX"]);
    const groupList = threadList.filter(group => group.isGroup);
    return api.sendMessage(`🤖 Bot মোট ${groupList.length}টি গ্রুপে Add আছে।`, event.threadID, event.messageID);
  }
};
